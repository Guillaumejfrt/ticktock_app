<div class="container">
  <div class="row">
    <div class="col-xs-6">
      <div>
        <% if @user.photo? %>
          <%= cl_image_tag @user.photo.path, width: 100, height: 100, crop: :thumb, gravity: :face %>
        <% end %>
      </div>
      <div>
        <p>Firstname: <%= @user.first_name.capitalize! %></p>
        <p>Last name: <%= @user.last_name.capitalize! %></p>
        <p>Watches: <%= @user.watches.count %></p>
        <div>
          <p>Link: <strong>Go to my dashboard</strong></p>
          <!-- <p><%#= link_to "Go to my dashboard", pages#dashboard %></p> -->
        </div>
      </div>
      <div>
        <%= link_to "Edit my profile", pages_profile_edit_path %>
      </div>
    </div>
  </div>
</div>
