<div class="container">
  <div class="row">
    <div class="col-xs-12 col-xs-offset-3 col-md-2">
      <h2><%= @watch.brand %></h2>
      <p><%= @watch.gender %></p>
      <p><%= @watch.mechanism %></p>
    </div>
    <div class="col-xs-12 col-xs-offset-1 ">
      <% if @watch.user.photo? %>
      <%= cl_image_tag(@watch.user.photo.path, gravity: :face,
      width: 50,
      crop: :fill,
      radius: :max) %>
      <% end %>
      <p><%= @watch.user.first_name %></p>
    </div>

    <div class="col-xs-12 col-xs-offset-3 col-md-2">
      <% @watch.photos.each do |photo| %>
      <%= cl_image_tag photo.path, width: 400, height: 400, crop: :fill %>
      <% end %>

    </div>
    <div class="col-xs-12 col-xs-offset-3 col-sm-4 ">
      <h3><%= @watch.price %>â‚¬</h3><span>/hour</span>
      <%= render "rentals/rental_form" %>
    </div>
  </div>
</div>
