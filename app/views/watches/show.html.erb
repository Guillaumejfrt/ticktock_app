<div class="container">
  <div class="row">
    <div class="col-xs-10 col-xs-offset-1 col-sm-5 col-sm-offset-1">
      <div class="row">
        <div class="col-xs-7 col-xs-offset-0 col-sm-8 col-sm-offset-1">
        <h2><%= @watch.brand %></h2>
        <p><%= @watch.gender %></p>
        <p><%= @watch.mechanism %></p>
        </div>
        <div class="col-xs-1 col-sm-1">
          <% if @watch.user.photo? %>
          <%= cl_image_tag(@watch.user.photo.path, gravity: :face,
                                                   width: 50,
                                                   crop: :fill,
                                                   radius: :max)
          %>
          <% end %>
          <p><%= @watch.user.first_name %></p>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-10 col-sm-offset-1">
            <% @watch.photos.each do |photo| %>
              <%= cl_image_tag photo.path, width: 400, height: 400, crop: :fill,
                                           class: "img-responsive" %>
              <% end %>
        </div>
      </div>
    </div>
    <div class="col-xs-10 col-xs-offset-1 col-sm-4">
    <div class="wrapper-beige">
      <h3><%= @watch.price %>â‚¬</h3><span>/hour</span>
      <%= render "rentals/rental_form" %>
    </div>
    </div>
  </div>
</div>
